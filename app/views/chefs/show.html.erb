<%= render 'shared/page_title', title: "Chef #{@chef.chefname}'s profile" %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 150 %>
  </div>
</div>

<% if @chef.receipts.count != 0 %>
  <h4 align="center"><%= @chef.chefname %>'s receipts</h4>
  <div align="center">
  <%= will_paginate @chef_receipts %>
  </div>
  <%= render 'receipts/receipt', obj: @chef_receipts %>
  <div align="center">
  <%= will_paginate @chef_receipts %>
  </div>
<% else %>
  <h4 align="center">No receipts yet</h4>
<% end %>