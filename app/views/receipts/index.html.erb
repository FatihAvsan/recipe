<h1 align= "center">Listing all Recipes</h1>
<hr/>

<% @receipts.each do |receipt| %>
  <div class="row">
    <div class="col-md-2">
      <section class="center">

      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= receipt.name %></h4>
      <p><%= truncate(receipt.description, length: 150) %></p>
      <p>
        <span class="quiet"><small>Created <%= time_ago_in_words(receipt.created_at) %> ago</small></span>
      </p>
    </div>
  </div>

<% end %>